{
  "parser": "@typescript-eslint/parser",
  "extends": [
    "plugin:react/recommended",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "plugins": ["react"],
  "rules": {
    "linebreak-style": "off",
    "react/no-unescaped-entities": "off",
    "quotes": ["error", "single", { "avoidEscape": true }],
    "eol-last": ["error", "always"],
    "no-loop-func": "error",
    "no-unsafe-finally": "error",
    "no-labels": "error",
    "accessor-pairs": ["error", { "getWithoutSet": true }],
    "no-constant-condition": "error",
    "no-implicit-globals": "error",
    "no-alert": "error",
    "no-delete-var": "error",
    "strict": ["error", "global"],
    "no-with": "error",
    "array-callback-return": ["error", { "allowImplicit": true }],
    "no-empty-function": ["error", { "allow": ["arrowFunctions"] }],
    "no-restricted-syntax": "error",
    "no-duplicate-imports": "error",
    "curly": ["error", "all"],
    "arrow-parens": ["error", "as-needed"],
    "max-len": ["error", { "code": 100, "tabWidth": 2, "ignoreStrings": true, "ignoreComments": true }],
    "space-before-function-paren": ["error", { "anonymous": "never", "named": "never", "asyncArrow": "always" }],

    // Rules that were turned `off` to pass eslint check.
    // TODO: Consider turning them `on` and fixing code at some point.

    "react/jsx-filename-extension": "off",
    "react/destructuring-assignment": "off",
    "react/prop-types": "off",
    "import/prefer-default-export": "off",
    "react/sort-comp": "off",
    "object-curly-newline": "off",
    "quote-props": "off",
    "react/jsx-one-expression-per-line": "off",
    "arrow-body-style": "off",
    "react/forbid-prop-types": "off",
    "import/no-useless-path-segments": "off",
    "no-shadow": "off",
    "react/jsx-curly-brace-presence": "off",
    "react/require-default-props": "off",
    "implicit-arrow-linebreak": "off",
    "react/button-has-type": "off",
    "operator-linebreak": "off",
    "object-shorthand": "off",
    "no-use-before-define": "off",
    "class-methods-use-this": "off",
    "react/jsx-wrap-multilines": "off",
    "no-unused-vars": "off",
    "react/jsx-closing-bracket-location": "off",
    "padded-blocks": "off",
    "react/no-array-index-key": "off",
    "function-paren-newline": "off",
    "import/order": "off",
    "space-infix-ops": "off",
    "func-names": "off", // TODO: replace with => "func-names": ["error", "never", { "generators": "always" }],
    "react/no-access-state-in-setstate": "off",
    "line-comment-position": "off", // TODO: replace with => "line-comment-position": ["error", { "position": "above" }],
    "prefer-destructuring": "off",
    "import/no-extraneous-dependencies": "off",
    "prefer-const": "off",
    "jsx-a11y/label-has-for": "off",
    "consistent-return": "off",
    "react/jsx-indent-props": "off",
    "no-case-declarations": "off",
    "no-param-reassign": "off",
    "prefer-promise-reject-errors": "off",
    "react/prefer-stateless-function": "off",
    "lines-between-class-members": "off",
    "prefer-arrow-callback": "off",
    "space-in-parens": "off",
    "camelcase": "off",
    "react/jsx-boolean-value": "off",
    "react/no-unused-prop-types": "off",
    "jsx-a11y/label-has-associated-control": "off",
    "jsx-a11y/no-static-element-interactions": "off",
    "jsx-a11y/click-events-have-key-events": "off",
    "react/no-unused-state": "off",
    "no-console": "off", // TODO: replace with => "no-console": "error",
    "no-plusplus": "off",
    "no-undef": "off",
    "no-return-assign": "off",
    "react/default-props-match-prop-types": "off",
    "no-unneeded-ternary": "off",
    "import/no-named-as-default": "off",
    "react/display-name": "off",
    "no-extra-boolean-cast": "off",
    "no-unused-expressions": "off",
    "react/no-did-update-set-state": "off",
    "react/self-closing-comp": "off",
    "react/jsx-closing-tag-location": "off",
    "react/jsx-max-props-per-line": "off",
    "no-prototype-builtins": "off",
    "jsx-a11y/no-noninteractive-element-interactions": "off",
    "react/jsx-no-bind": "off",
    "react/jsx-first-prop-new-line": "off",
    "no-confusing-arrow": "off",
    "object-property-newline": "off",
    "new-cap": "off"
  },
  "env": {
    "browser": true,
    "jest": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "jsx": true
  },
  "overrides": [
    {
      "files": ["*.test*.js"],
      "rules": {
        "max-len": ["error", { "code": 180, "tabWidth": 2 }],
        "react/jsx-filename-extension": "off"
      }
    }
  ],
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [["src", "./src"]],
        "extensions": [".js", ".jsx", ".json", ".ts", ".tsx"]
      }
    }
  }
}
